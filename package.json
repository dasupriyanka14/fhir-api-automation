{
  "name": "fhir-api-automation",
  "version": "1.0.0",
  "description": "Playwright-based FHIR API automation test framework",
  "main": "index.js",

  "scripts": {
    "test": "cross-env ENV=QA playwright test",
    "test:uat": "cross-env ENV=UAT playwright test",
    "test:prod": "cross-env ENV=PROD playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:e2e": "playwright test --grep @e2e",
    "report": "playwright show-report",
    "allure:generate": "allure generate ./allure-results --clean",
    "allure:open": "allure open"
  },

  "keywords": [
    "playwright",
    "fhir",
    "api",
    "automation",
    "testing"
  ],

  "author": "Priyanka Das",
  "license": "ISC",
  "type": "commonjs",

  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "cross-env": "^10.1.0"
  },

  "dependencies": {
    "ajv": "^8.18.0",
    "allure-js-commons": "^3.4.5",
    "dotenv": "^17.3.1"
  }
}
